<?xml version="1.0" encoding="UTF-8"?>

<project name="abacus" basedir="." default="main">

	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="classes.dir" value="${build.dir}/classes"/>
	<property name="jar.dir" value="${build.dir}/jar"/>
	<property name="version.num" value="2.00"/>

	<property name="main-class" value="mainFunction.mainFunction"/>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
		<delete file="./${ant.project.name}.jar"/>
	</target>

	<target name="compile">
		<mkdir dir="${classes.dir}"/>
		<javac executable="/opt/jdk/bin/javac" 
			srcdir="${src.dir}" 
			destdir="${classes.dir}"
			debug="on"
			debuglevel="lines,vars,source"
		/>
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}"/>
		<buildnumber file="build.num"/>

		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<zipfileset dir="${src.dir}" prefix=""/>
			<zipfileset src="${src.dir}/hsqldb.jar"/>

			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
				<attribute name="Implementation-Version"
					value="${version.num}-b${build.number}"/>
			</manifest>
		</jar>
	</target>

	<target name="build" depends="jar">
		<move file="${jar.dir}/${ant.project.name}.jar" todir="."/>
		<delete dir="${build.dir}"/>
	</target>

</project>


